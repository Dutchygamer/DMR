// monster death explosion spawners
Class DMR_CyberDeathExplosionSpawner : DMR_FXSpawner
{
	States
	{
	Spawn:
		TNT1 A 0 NoDelay A_CheckSightOrRange(2000,"Null");
		TNT1 AAA 1 
		{
			A_SpawnItemEx("DMR_BossDeathExplosion",random(0,60),0,random(20,120),0,0,0,random(0,360));
			A_SetTics(random(1,6));
		}
		Stop;
	}
}



Class DMR_FXSpawner : DMR_FXBase
{
	Default
	{
		+NOINTERACTION;
	}
}


// projectile impact spawners
// Imp, Revenant etc
Class DMR_FireballImpactSpawner : DMR_FXSpawner
{
	States
	{
	Spawn:
		TNT1 A 0 NoDelay A_CheckSightOrRange(2000,"Null");
		TNT1 AAAAAA 0
		{			
			A_SpawnItemEx("DMR_SmallFireballTrail",random(-1,1),random(-1,1),random(-1,1),frandom(-2,2),frandom(-2,2),frandom(-1,2)); 
		}
		TNT1 AA 0
		{			
			A_SpawnItemEx("DMR_FireballTrail",random(-1,1),random(-1,1),random(-1,1),frandom(-2,2),frandom(-2,2),frandom(-1,2));
		}
		Stop;		
	}
}


class FormerPlasmaCommando : DMR_ChaingunGuy
{
	Default
	{
		Tag "Former Plasma Commando";
		Health 110;
		PainChance 150;
		DropItem "Cell", 256, 20;
		DropItem "Cell", 128, 20;
		DropItem "Cell", 64, 20;
		Obituary "%o was fried by a Former Plasma Commando.";
	}
 	States
	{
	Spawn:
		PNGZ AB 10 A_Look;
		Loop;
	See:
		PNGZ AABBCCDD 4 A_Chase;
		Loop;
	Missile:
		PNGZ E 10 A_FaceTarget;
		PNGZ F 4 BRIGHT Light("DMR_HellRuneFire") A_SpawnProjectile("FormerPlasmaCommandoBall");
		PNGZ E 4 A_FaceTarget;
		PNGZ F 4 BRIGHT Light("DMR_HellRuneFire") A_SpawnProjectile("FormerPlasmaCommandoBall");
		PNGZ E 4 A_FaceTarget;
		PNGZ F 4 BRIGHT Light("DMR_HellRuneFire") A_SpawnProjectile("FormerPlasmaCommandoBall");
		PNGZ E 4 A_FaceTarget;
		PNGZ F 4 BRIGHT Light("DMR_HellRuneFire") A_SpawnProjectile("FormerPlasmaCommandoBall");
		PNGZ E 4 A_FaceTarget;
		PNGZ E 10 A_MonsterRefire(25, "See");
		Goto Missile+1;
	Pain:
		PNGZ G 3;
		PNGZ G 3 A_Pain;
		Goto See;
	Death:
		PNGZ H 5;
		PNGZ I 5 A_Scream;
		PNGZ J 5 A_NoBlocking;
		PNGZ K 5;
		PNGZ L -1;
		Stop;
	XDeath:
		PNGZ O 5;
		PNGZ P 5 A_XScream;
		PNGZ Q 5 A_NoBlocking;
		PNGZ RSTU 5;
		PNGZ V -1;
		Stop;
	Raise:
		PNGZ KJIH 5;
		Goto See;
	}
}

class FormerPlasmaCommandoBall : DMR_HellRune
{  
	Default
	{
		DamageFunction(random(8,24));
		Speed 19;
		Scale 0.8;
	}
}
